        <script><![CDATA[(function runMailScript(current, template, email, email_action, event) {
	
	var utils = new Utils();
	
	var dayNumber = new GlideDateTime(current.answer_end).getDayOfWeekUTC();
	var dayName = utils.getDayOfWeekName(dayNumber);
	
	var formattedDate = utils.dateToLetterFormat(current.answer_end);
	
	var output = dayName + ', ' + formattedDate;
	
	template.print(output);

})(current, template, email, email_action, event);]]></script>
